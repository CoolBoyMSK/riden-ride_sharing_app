            "body": {
              "mode": "raw",
              "raw": "{\n  \"coordinates\": [{{$randomLongitude}}, {{$randomLatitude}}],\n  \"heading\": {{$randomInt}},\n  \"speed\": {{$randomInt}},\n  \"accuracy\": {{$randomInt}}\n}"
