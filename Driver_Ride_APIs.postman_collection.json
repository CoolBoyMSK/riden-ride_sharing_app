  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default ride_id if not set",
          "if (!pm.environment.get('ride_id')) {",
          "    pm.environment.set('ride_id', 'RIDE_67890_SAMPLE');",
          "}",
          "",
          "// Generate random coordinates within NYC area for testing",
          "const nycCoords = {",
          "    minLat: 40.4774,",
          "    maxLat: 40.9176,",
          "    minLng: -74.2591,",
          "    maxLng: -73.7004",
          "};",
          "",
          "pm.globals.set('randomLatitude', (Math.random() * (nycCoords.maxLat - nycCoords.minLat) + nycCoords.minLat).toFixed(6));",
          "pm.globals.set('randomLongitude', (Math.random() * (nycCoords.maxLng - nycCoords.minLng) + nycCoords.minLng).toFixed(6));"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Common test script for all requests",
          "pm.test('Status code is success', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});",
          "",
          "pm.test('Response has success field', function () {",
          "    const response = pm.response.json();",
          "    pm.expect(response).to.have.property('success');",
          "});",
          "",
          "// Log response for debugging",
          "console.log('Response:', pm.response.json());"
        ]
      }
    }
  ]
}
