{
  "info": {
    "name": "Driver Ride APIs",
    "description": "Complete collection of driver ride management and tracking APIs",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{driver_access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/user/rides",
      "type": "string"
    },
    {
      "key": "driver_access_token",
      "value": "your_driver_jwt_token_here",
      "type": "string"
    },
    {
      "key": "driver_id",
      "value": "driver_id_from_auth",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Driver Location Management",
      "item": [
        {
          "name": "Update Driver Location - Online",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{driver_access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"coordinates\": [-74.006, 40.7128],\n  \"heading\": 45,\n  \"speed\": 25,\n  \"accuracy\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/driver/location",
              "host": ["{{base_url}}"],
              "path": ["driver", "location"]
            },
            "description": "Update driver's current location with GPS data"
          }
        },
        {
          "name": "Update Driver Location - Moving",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{driver_access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"coordinates\": [-73.9857, 40.7484],\n  \"heading\": 180,\n  \"speed\": 35,\n  \"accuracy\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/driver/location",
              "host": ["{{base_url}}"],
              "path": ["driver", "location"]
            },
            "description": "Update driver location while moving (higher speed)"
          }
        },
        {
          "name": "Update Driver Location - Stationary",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{driver_access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"coordinates\": [-73.935, 40.7282],\n  \"heading\": 0,\n  \"speed\": 0,\n  \"accuracy\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/driver/location",
              "host": ["{{base_url}}"],
              "path": ["driver", "location"]
            },
            "description": "Update driver location when stationary (waiting)"
          }
        }
      ],
      "description": "Manage driver's real-time location for ride matching and tracking"
    },
    {
      "name": "2. Ride Status Management",
